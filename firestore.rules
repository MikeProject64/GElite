rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regra geral: Permite leitura e escrita para qualquer usuário autenticado.
    // Isso garante que o aplicativo funcione sem erros de permissão.
    // A segurança pode ser refinada posteriormente, se necessário.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
