rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // Use exists() to safely check for the admin role to prevent errors on new user creation.
      return request.auth != null &&
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Checks ownership of a document being created by looking at the incoming data.
    function isCreatingOwnResource() {
      return request.auth != null && request.resource.data.userId == request.auth.uid;
    }

    // Checks ownership of an existing document by looking at the stored data.
    function isAccessingOwnResource() {
        return request.auth != null && resource.data.userId == request.auth.uid;
    }

    // --- Global Config & Plans ---
    match /siteConfig/{docId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /plans/{planId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // --- User Documents ---
    match /users/{userId} {
      // Crucial for signup: Allows a newly authenticated user to create their own document.
      allow create: if isOwner(userId);
      
      // Users can read/update their own data. Admins can manage any user.
      allow read, update: if isOwner(userId) || isAdmin();

      // Only admins can delete users.
      allow delete: if isAdmin();
    }
    
    // --- User-Specific Appearance Settings ---
    match /userSettings/{userId} {
        allow read, write: if isOwner(userId);
    }
    
    // --- Application Data Collections ---
    match /customers/{docId} {
      allow create: if isCreatingOwnResource() || isAdmin();
      allow read, update, delete: if isAccessingOwnResource() || isAdmin();
    }
    
    match /serviceOrders/{docId} {
      allow create: if isCreatingOwnResource() || isAdmin();
      allow read, update, delete: if isAccessingOwnResource() || isAdmin();
    }

    match /quotes/{docId} {
      allow create: if isCreatingOwnResource() || isAdmin();
      allow read, update, delete: if isAccessingOwnResource() || isAdmin();
    }
    
    match /collaborators/{docId} {
      allow create: if isCreatingOwnResource() || isAdmin();
      allow read, update, delete: if isAccessingOwnResource() || isAdmin();
    }
    
    match /inventory/{docId} {
      allow create: if isCreatingOwnResource() || isAdmin();
      allow read, update, delete: if isAccessingOwnResource() || isAdmin();
    }
    
    match /inventoryMovements/{docId} {
      allow create: if isCreatingOwnResource() || isAdmin();
      allow read, update, delete: if isAccessingOwnResource() || isAdmin();
    }

    match /timelineNotes/{docId} {
      allow create: if isCreatingOwnResource() || isAdmin();
      allow read, update, delete: if isAccessingOwnResource() || isAdmin();
    }
  }
}
