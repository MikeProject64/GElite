rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can read and write to their own user document in the 'users' collection
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read and write to their own settings document in the 'userSettings' collection
    match /userSettings/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Users can manage their own customers in the 'customers' collection
    match /customers/{customerId} {
      allow read, update, delete: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }

    // Users can manage their own service orders in the 'serviceOrders' collection
    match /serviceOrders/{orderId} {
      allow read, update, delete: if request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid == request.resource.data.userId;
    }
  }
}
