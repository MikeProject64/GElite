
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write to their own user document.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Users can only read and write their own settings.
    match /userSettings/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Generic rule for all other data collections
    match /{collection}/{docId} {
      // A user can create a document if the document's userId field
      // matches their own uid.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;

      // A user can read, update, or delete a document if they are the owner.
      allow read, update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}
