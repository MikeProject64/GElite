rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the requesting user is the owner of a document.
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Rule for user-specific documents like their own profile or settings.
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    match /userSettings/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Generic rule for all user-owned content collections.
    // This applies to customers, serviceOrders, inventory, quotes, and managers.
    match /{collection}/{docId}
      where collection in ['customers', 'serviceOrders', 'inventory', 'quotes', 'managers'] {
      
      // Allow read, update, and delete if the user is the owner of the existing document.
      allow read, update, delete: if isOwner(resource.data.userId);
      
      // Allow creation if the user is setting themselves as the owner of the new document.
      allow create: if isOwner(request.resource.data.userId);
    }
  }
}
