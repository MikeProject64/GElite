rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    function isResourceOwner() {
      // Check if the requesting user's ID matches the 'userId' field in the document being read/written.
      return isSignedIn() && request.auth.uid == resource.data.userId;
    }
    function userIsCreatingOwnData() {
        // Check if the 'userId' in the data being created matches the user's own UID.
        return isSignedIn() && request.resource.data.userId == request.auth.uid;
    }
    function isAdmin() {
      // Check if the user document exists and has the role 'admin'.
      return isSignedIn() && exists(/databases/$(database)/documents/users/$(request.auth.uid))
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Users Collection
    match /users/{userId} {
      allow create: if isOwner(userId);
      allow read, update: if isOwner(userId) || isAdmin();
      allow list, delete: if isAdmin();
    }
    
    // User Settings Collection
    match /userSettings/{userId} {
      allow read, write: if isOwner(userId) || isAdmin();
    }

    // Site Configuration
    match /siteConfig/main {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Plans Collection
    match /plans/{planId} {
      allow read: if resource.data.isPublic == true;
      allow list: if isSignedIn();
      allow write: if isAdmin();
    }
    
    // Customer Data
    match /customers/{docId} {
      allow list: if isSignedIn();
      allow create: if userIsCreatingOwnData();
      allow read, update, delete: if isResourceOwner() || isAdmin();
    }

    // Service Orders
    match /serviceOrders/{docId} {
      allow list: if isSignedIn();
      allow create: if userIsCreatingOwnData();
      allow read, update, delete: if isResourceOwner() || isAdmin();
    }

    // Quotes
    match /quotes/{docId} {
      allow list: if isSignedIn();
      allow create: if userIsCreatingOwnData();
      allow read, update, delete: if isResourceOwner() || isAdmin();
    }
    
    // Collaborators
    match /collaborators/{docId} {
      allow list: if isSignedIn();
      allow create: if userIsCreatingOwnData();
      allow read, update, delete: if isResourceOwner() || isAdmin();
    }

    // Inventory Items
    match /inventory/{docId} {
      allow list: if isSignedIn();
      allow create: if userIsCreatingOwnData();
      allow read, update, delete: if isResourceOwner() || isAdmin();
    }

    // Inventory Movements
    match /inventoryMovements/{docId} {
      allow list: if isSignedIn();
      allow create: if userIsCreatingOwnData();
      allow read, update, delete: if isResourceOwner() || isAdmin();
    }
    
    // Timeline Notes
    match /timelineNotes/{docId} {
      allow list: if isSignedIn();
      allow create: if userIsCreatingOwnData();
      allow read, update, delete: if isResourceOwner() || isAdmin();
    }
  }
}
