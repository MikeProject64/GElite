rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only create their own user document on signup.
    // And can only read/update their own document.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
    }

    // User-specific settings document is identified by the user's UID.
    match /userSettings/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Customers are owned by users.
    match /customers/{customerId} {
      // Allow create if the new document's userId matches the authenticated user.
      allow create: if request.auth.uid == request.resource.data.userId;
      // Allow read, update, delete if the authenticated user's ID matches the userId on the document.
      allow read, update, delete: if request.auth.uid == resource.data.userId;
    }

    // Inventory items are owned by users.
    match /inventory/{itemId} {
      allow create: if request.auth.uid == request.resource.data.userId;
      allow read, update, delete: if request.auth.uid == resource.data.userId;
    }

    // Service Orders are owned by users.
    match /serviceOrders/{orderId} {
      allow create: if request.auth.uid == request.resource.data.userId;
      allow read, update, delete: if request.auth.uid == resource.data.userId;
    }
  }
}
