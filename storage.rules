
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // For service order attachments
    match /serviceOrders/{orderId}/{allPaths=**} {
       allow read, write: if request.auth != null && request.resource.metadata.userId == request.auth.uid;
    }

    // For collaborator photos
    match /collaborators/{collaboratorId}/{fileName} {
      allow read; // Anyone can read collaborator photos, e.g. for public profiles if needed
      allow write: if request.auth != null && request.resource.metadata.userId == request.auth.uid;
    }
  }
}
