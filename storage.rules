
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /serviceOrders/{orderId}/{fileName} {
      // Allow read access to any authenticated user. This allows clients
      // or other team members to view attachments if they have the URL.
      allow read: if request.auth != null;

      // Allow write access (uploads) only if the user is authenticated AND
      // they are providing metadata that correctly identifies them as the uploader.
      // This metadata is added by the client-side code during the upload process.
      allow write: if request.auth != null && request.resource.metadata.userId == request.auth.uid;
    }
  }
}
