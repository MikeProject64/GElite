rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // User can only upload files if they are authenticated and the file's
    // custom metadata 'userId' matches their own UID.
    // Files can be read by anyone with the URL (public access).
    
    // Collaborator photos
    match /collaborators/{collaboratorId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == request.resource.metadata.userId;
    }
    
    // Service order attachments
    match /serviceOrders/{orderId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == request.resource.metadata.userId;
    }

    // Inventory movement attachments
    match /inventoryMovements/{itemId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == request.resource.metadata.userId;
    }
  }
}
