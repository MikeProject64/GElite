rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permite a escrita (upload, update, delete) em qualquer caminho
    // para qualquer usuário autenticado, desde que a requisição inclua
    // o UID do usuário nos metadados do arquivo.
    // Isso garante que apenas o próprio usuário possa enviar arquivos em seu nome.
    match /{allPaths=**} {
      allow write: if request.auth != null && request.resource.metadata.userId == request.auth.uid;

      // Permite a leitura de todos os arquivos por qualquer pessoa.
      // Ideal para imagens e anexos que precisam ser exibidos publicamente.
      // Pode ser restringido se necessário no futuro.
      allow read;
    }
  }
}
